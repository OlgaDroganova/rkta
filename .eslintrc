---
  root: true
  parser: '@typescript-eslint/parser'
  plugins:
    - '@typescript-eslint'
    - prettier
  extends:
    - airbnb
    - eslint:recommended
    - plugin:@typescript-eslint/recommended
    - prettier/@typescript-eslint
    - plugin:prettier/recommended
  parserOptions:
    ecmaVersion: 6
    project: ./tsconfig.json
    sourceType: module
  rules:
    quotes:
      - error
      - single
    prettier/prettier:
      - error
      - singleQuote: true
        trailingComma: true
        printWidth: 100
    react/jsx-filename-extension:
      - 1
      - extensions:
        - .jsx
        - .tsx
    jsx-a11y/anchor-is-valid:
      - error:
        aspects:
         - invalidHref
         - preferButton
        components:
          - Link
        specialLink:
          - hrefLeft
          - hrefRight
